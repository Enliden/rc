
colorscheme alduin
set textwidth=80
set nowrap
set nocompatible
set expandtab
set tabstop=4
set title
set number

"Search for a file in subfolders' subfolder
set path+=**

"Directions in split
nnoremap <C-J> <C-W><C-J> 
nnoremap <C-K> <C-W><C-K> 
nnoremap <C-H> <C-W><C-H>
nnoremap <C-L> <C-W><C-L>


set noexpandtab

set splitbelow
set splitright
